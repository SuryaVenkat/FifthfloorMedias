<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:orientation="vertical" android:background="@android:color/white" android:layout_width="fill_parent" android:layout_height="wrap_content"
  xmlns:android="http://schemas.android.com/apk/res/android">
    <RelativeLayout
        android:padding="10.0dip"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/btnclose"
            android:background="@drawable/close"
            android:layout_width="30dip"
            android:layout_height="30dip"
            android:layout_alignParentRight="true" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@id/btnclose"
            android:layout_marginTop="20dp"
            android:id="@+id/lly_code">
            <TextView
                android:textSize="18.0sp"
                android:gravity="center"
                android:id="@+id/label"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="your Code"
                android:visibility="gone"/>

            <EditText
                android:id="@+id/txtalertinfo"
                android:background="@drawable/edit_bg"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:padding="10dp"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10.0dip"
                android:layout_marginBottom="10.0dip"
                android:text=""
                android:hint="Your Username"
                android:gravity="center"
                android:inputType="textEmailAddress" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@id/lly_code"
            android:layout_marginTop="10dp"
            android:id="@+id/lly_password">
            <TextView
                android:textSize="18.0sp"
                android:gravity="center"
                android:id="@+id/label2"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" Password"
                android:visibility="gone"/>
            <EditText
                android:id="@+id/txtalertpass"
                android:background="@drawable/edit_bg"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:padding="10dp"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10.0dip"
                android:layout_marginBottom="10.0dip"
                android:text=""
                android:hint="Your Password"
                android:gravity="center"
                android:inputType="textPassword" />
        </LinearLayout>

        <Button
            android:textColor="#ffffffff"
            android:gravity="center"
            android:id="@+id/btn_retry"
            android:background="@drawable/style_filled"
            android:layout_width="100dp"
            android:layout_height="35.0dip"
            android:layout_marginTop="20dip"
            android:text="Login"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/lly_password"
            android:layout_centerInParent="true" />
    </RelativeLayout>
</LinearLayout>